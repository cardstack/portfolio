<nav class="portfolio-breadcrumbs" data-test-portfolio-breadcrumbs>
  <ul class="portfolio-breadcrumbs__list">
    <li class="portfolio-breadcrumbs__list-item" data-test-portfolio-breadcrumbs-portfolio>
      <a href="/" class="portfolio-breadcrumbs__link portfolio-breadcrumbs__background">
        {{svg-jar "briefcase" width="18px" height="16px" class="portfolio-breadcrumbs__logo"}}
        <span>My Portfolio</span>
      </a>
    </li>

    {{#if (or isAsset isTransaction)}}
      <li class="portfolio-breadcrumbs__list-item" data-test-portfolio-breadcrumbs-wallet>
        {{!-- TO DO: Query wallet, display wallet logo, link to it --}}
        <a href={{cardstack-url "/wallets/demo-wallet"}} class="portfolio-breadcrumbs__link">
          <span
            style={{css-url "background-image" (or walletLogoHere "/portfolio-common/images/wallet.svg")}}
            class="portfolio-breadcrumbs__logo portfolio-breadcrumbs__logo--wallet"
          />
          <span>Demo Wallet</span>
        </a>
      </li>
    {{/if}}

    {{#if isTransaction}}
      <li class="portfolio-breadcrumbs__list-item" data-test-portfolio-isolated-asset>
        <a
          href={{cardstack-url assetPath}}
          class="portfolio-breadcrumbs__link portfolio-breadcrumbs__background {{assetType}}"
        >
          {{svg-jar assetType width="22px" height="22px" class="portfolio-breadcrumbs__logo"}}
          <span class="portfolio-breadcrumbs__asset-type" data-test-portfolio-breadcrumbs-asset-type>{{assetType}}</span>
          <span data-test-portfolio-breadcrumbs-asset-address>{{abbreviatedAddress}}</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>