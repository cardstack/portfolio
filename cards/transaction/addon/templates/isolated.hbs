      </section>

      <section class="transaction-isolated__notes">
        <h3 class="transaction-isolated__section-title transaction-isolated__notes-title">
          Notes
        </h3>
        <div class="transaction-isolated__group">
          <ul class="transaction-isolated__notes-list">
