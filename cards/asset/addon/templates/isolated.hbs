<div class="asset-isolated">
  <button class="asset-isolated__button-row">Back to My Portfolio</button>

  <h1 class="asset-isolated__title" data-test-asset-isolated-title>{{content.title}} Asset Detail</h1>
  <div class="asset-isolated__grid">
    <div>
      <section class="asset-isolated__main asset-isolated__group">
        <AnimatedContainer>
        {{#animated-value content group="background" use=offscreenLeft initialInsertion=true finalRemoval=true}}
        <div class="asset-isolated__gradient asset-isolated__gradient--{{title}}">
          <AnimatedContainer>
          {{#animated-value content group="insides" use=dontScale initialInsertion=true finalRemoval=true }}
          <div class="asset-isolated__gradient-header">
            <h2 class="asset-isolated__gradient-title">
              {{#animated-value content group="logo" use=logoTransition initialInsertion=true finalRemoval=true }}
                {{svg-jar content.logo}}
              {{/animated-value}}
              {{title}}
            </h2>
            <div class="asset-isolated__tag">Savings</div>
          </div>
          <div class="asset-isolated_gradient-wrapper">
            <div>
              <span class="asset-isolated__value">2.1434</span>
              <span class="asset-isolated__unit" data-test-asset-isolated-unit>{{content.unit}}</span>
            </div>
            <div>
              <span class="asset-isolated__value--secondary">$8509.30</span>
              <span class="asset-isolated__unit--secondary">USD</span>
            </div>
          </div>
          <div class="asset-isolated__chart">
            <div>
              --- CHART HERE ---
            </div>
          </div>
          {{/animated-value}}
          </AnimatedContainer>
        </div>
        {{/animated-value}}
        </AnimatedContainer>

        <div class="asset-isolated__details">
          <div class="asset-isolated__details-item">
            <h4 class="asset-isolated__details-item-title">Address</h4>
            1HzkJMLmzFVj8ALj6mfBsbifRoD4miY36v
          </div>
          <div class="asset-isolated__details-item">
            <h4 class="asset-isolated__details-item-title">Established</h4>
            Aug 12, 2017
          </div>
          <div class="asset-isolated__details-item">
            <h4 class="asset-isolated__details-item-title">Transactions</h4>
            42
          </div>
          <div class="asset-isolated__details-item">
            <h4 class="asset-isolated__details-item-title">Last active</h4>
            2m ago
          </div>
        </div>

        <div class="asset-isolated__buttons">
          <button>Transfer Funds</button>
          <button>Trade Currency</button>
        </div>
      </section>

      <section>
        <h3 class="asset-isolated__section-title">Transaction History</h3>
        <div class="asset-isolated__group asset-isolated__transactions">
          {{#each content.transactions as |transaction index|}}
            <div asset-isolated-transaction={{index}}>
              {{cardstack-content content=transaction format="embedded"}}
            </div>
          {{/each}}
        </div>
      </section>
    </div>

    <aside>
      <section>
        <h3 class="asset-isolated__section-title">Wallet</h3>
        <div class="asset-isolated__group">
          <div class="asset-isolated__group-title">{{svg-jar "ing-logo"}} ING Wallet</div>
          <button class="asset-isolated__group-button">
            Move funds to another wallet
          </button>
        </div>
      </section>
      <section>
        <h3 class="asset-isolated__section-title">Tags</h3>
        <div class="asset-isolated__group">
          <div class="asset-isolated__group-title">
            <span>Savings</span>
            <span>Business Operations</span>
            <span>International</span>
            {{!-- TAGS HERE --}}
          </div>
          <button class="asset-isolated__group-button">
            Add custom tag
          </button>
        </div>
      </section>
    </aside>
  </div>
</div>
