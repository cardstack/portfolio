<div class="register-isolated">
  <h1>Register User</h1>
  {{#if registrationSuccessful}}
    <div data-test-registration-success>You have been registered. Please login to application.</div>
    <button data-test-registration-success-dismiss {{action transitionToAppCard}}>Ok</button>
  {{else}}
    {{#if registrationError}}
      <div data-test-registration-error><b>{{registrationError}}</b></div>
    {{/if}}
    <form onsubmit={{action submitForm}} data-test-registration-form>
      <div>
        <label>
          <span>Name:</span>
          <input
              type="text"
              placeholder="Full name"
              value={{name}}
              oninput={{action doOnInput 'name'}}
              data-test-registration-name
              />
        </label>
      </div>
      <div>
        <label>
          <span>Email:</span>
          <input
              type="email"
              placeholder="hello@cardstack.com"
              value={{email}}
              oninput={{action doOnInput 'email'}}
              data-test-registration-email
              />
        </label>
      </div>
      <div>
        <label>
          <span>Password (minimum 8 characters):</span>
          <input
              type="password"
              value={{password}}
              oninput={{action doOnInput 'password'}}
              data-test-registration-password
              />
        </label>
      </div>
      <button data-test-registration-cancel {{action transitionToAppCard}}>Cancel</button>
      <button disabled={{not formCanBeSubmitted}} type="submit" data-test-registration-submit>Register</button>
    </form>
  {{/if}}
</div>
