{{#cardstack-edges}}
  {{#squishable-container}}

    {{!-- fastboot guard --}}
    {{#if (is-component "cardstack-session")}}
      {{#cardstack-session as |session|}}
        {{#password-login as |login|}}
          {{#if session.isAuthenticated }}
            <button {{action session.logout}} data-test-signout-button>
              Sign out {{session.user.name}}
            </button>
          {{/if}}
        {{/password-login}}
      {{/cardstack-session}}
    {{/if}}

    {{outlet}}

  {{/squishable-container}}
{{/cardstack-edges}}
