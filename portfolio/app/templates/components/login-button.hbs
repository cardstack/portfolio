{{!-- fastboot guard --}}
{{#if (is-component "cardstack-session")}}
  {{#cardstack-session as |session|}}
    {{#if usePasswordAuth}}
      {{#password-login onAuthenticationSuccess=onAuthenticationSuccess
                        onAuthenticationFailed=onAuthenticationFailed
                        as |login|}}
        {{yield session login}}
      {{/password-login}}
    {{else}}
      {{#mock-login as |login|}}
        {{yield session login}}
      {{/mock-login}}
    {{/if}}
  {{/cardstack-session}}
{{/if}}
